<!DOCTYPE html>
<html>
<head>
  <title>Reactions.js</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag 'application', media: 'all' %>

    <%= javascript_include_tag "vendor/modernizr" %>

  <%= csrf_meta_tags %>
</head>
<body>
    <%- if current_user -%>
      <div id='userInfo' class="hide">
        <div id='userName'><%= current_user.user_name %></div>
        <div id='userPhoto'><%= current_user.profile_photo %></div>
        <div id='baselineBest'><%= current_user.fastest_baseline %></div>
        <div id='challengeBest'><%= current_user.most_challenge_hits %></div>
      </div>
    <%- end -%>
  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= javascript_pack_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
